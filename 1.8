import { useState } from 'react';
import Statistics from './Statistics'; // Import the Statistics component

const App = () => {
  // Initialize state for feedback categories
  const [good, setGood] = useState(0);
  const [neutral, setNeutral] = useState(0);
  const [bad, setBad] = useState(0);

  // Calculate total feedback count
  const total = good + neutral + bad;

  // Calculate average score: (good: 1, neutral: 0, bad: -1)
  const average = total === 0 ? 0 : (good - bad) / total;

  // Calculate percentage of positive feedback
  const positivePercentage = total === 0 ? 0 : (good / total) * 100;

  return (
    <div>
      <h2>Unicafe Feedback</h2>

      {/* Feedback Buttons */}
      <button onClick={() => setGood(good + 1)}>Good</button>
      <button onClick={() => setNeutral(neutral + 1)}>Neutral</button>
      <button onClick={() => setBad(bad + 1)}>Bad</button>

      {/* Statistics Component */}
      <Statistics
        total={total}
        average={average}
        positivePercentage={positivePercentage}
      />
    </div>
  );
};

export default App;
